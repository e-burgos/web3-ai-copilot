{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint: All Projects",
      "type": "shell",
      "command": "pnpm lint:all",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Lint: Debug Mode",
      "type": "shell",
      "command": "pnpm lint:debug",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "test"
    },
    {
      "label": "Lint: Fix All",
      "type": "shell",
      "command": "pnpm lint:fix",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "test"
    },
    {
      "label": "TypeScript: Check",
      "type": "shell",
      "command": "npx tsc --noEmit --pretty",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "test"
    }
  ]
}

